<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details"
    android:background="@color/colorPrimaryDark">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:descendantFocusability="blocksDescendants">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/two"
                    android:adjustViewBounds="true"
                    android:id="@+id/image"/>
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/arrow"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/back"/>
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/download"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/downld"/>

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/downld"
                    android:src="@drawable/like"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/love"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Night Island"
                    android:fontFamily="@font/helveticaneu_bold"
                    android:textSize="34dp"
                    app:layout_constraintTop_toBottomOf="@id/image"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/texth"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45 MIN • SLEEP MUSIC"
                    android:fontFamily="@font/helveticaneue_medium"
                    android:textSize="14dp"
                    app:layout_constraintTop_toBottomOf="@id/texth"
                    android:textColor="@color/homeDim"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/texth2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ease the mind into a restful night’s sleep  with these deep, amblent tones."
                    android:fontFamily="@font/helveticaneue_light"
                    android:textSize="16dp"
                    app:layout_constraintTop_toBottomOf="@id/texth2"
                    android:textColor="@color/homeDim"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/texth3"/>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toBottomOf="@id/texth3"
                    android:layout_marginTop="20dp"
                    android:id="@+id/likes"
                    android:layout_marginLeft="17dp">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/hrt"
                        android:id="@+id/hrt"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="24.234 Favourites"
                        app:layout_constraintLeft_toRightOf="@id/hrt"
                        android:fontFamily="@font/helveticaneue_medium"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/hrtt"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/hrtt"
                        android:src="@drawable/hp"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/hp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="34.234 Lestening"
                        app:layout_constraintLeft_toRightOf="@id/hp"
                        android:fontFamily="@font/helveticaneue_medium"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"/>

                </android.support.constraint.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/likes"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/homeDim"
                    android:alpha=".2"
                    android:id="@+id/v1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Related"
                    android:fontFamily="@font/helveticaneue_medium"
                    android:textSize="24dp"
                    app:layout_constraintTop_toBottomOf="@id/v1"
                    android:textColor="@color/rel"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/rel"/>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/verti_recycl"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/rel"
                    android:descendantFocusability="blocksDescendants">

                </android.support.v7.widget.RecyclerView>


            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/play_con">
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_blue_button_radius_30"
            android:text="PLAY"
            android:textColor="@color/white"
            android:id="@+id/play"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>