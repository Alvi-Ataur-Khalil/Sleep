<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayMusic"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/music_bg"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/cross"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/back"/>
    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/download"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:id="@+id/downld"/>

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/downld"
        android:src="@drawable/like"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:id="@+id/love"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/homeDim"
        android:alpha=".4"
        android:id="@+id/v1"/>

    <View
        android:layout_width="70dp"
        android:layout_height="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/white"
        android:alpha=".4"
        android:id="@+id/v2"/>
    
    <ImageView
        android:layout_width="17dp"
        android:layout_height="17dp" 
        app:layout_constraintTop_toTopOf="@id/v1"
        app:layout_constraintBottom_toBottomOf="@id/v1"
        app:layout_constraintLeft_toRightOf="@id/v2"
        app:layout_constraintRight_toRightOf="@id/v2"
        android:src="@drawable/play_round"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01:30"
        android:fontFamily="@font/helveticaneue_medium"
        android:textColor="@color/rel"
        app:layout_constraintTop_toBottomOf="@id/v1"
        app:layout_constraintLeft_toLeftOf="@id/v1"
        app:layout_constraintRight_toLeftOf="@id/v1"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45:00"
        android:fontFamily="@font/helveticaneue_medium"
        android:textColor="@color/rel"
        app:layout_constraintTop_toBottomOf="@id/v1"
        app:layout_constraintLeft_toRightOf="@id/v1"
        app:layout_constraintRight_toRightOf="@id/v1"
        android:layout_marginTop="15dp"/>
    
    <ImageView
        android:layout_width="109dp"
        android:layout_height="109dp"
        app:layout_constraintBottom_toTopOf="@id/v1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="80dp"
        android:src="@drawable/play"
        android:id="@+id/play"/>
    
    <ImageView
        android:layout_width="39dp"
        android:layout_height="39dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/play"
        app:layout_constraintTop_toTopOf="@id/play"
        app:layout_constraintBottom_toBottomOf="@id/play"
        android:src="@drawable/l15"/>

    <ImageView
        android:layout_width="39dp"
        android:layout_height="39dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/play"
        app:layout_constraintTop_toTopOf="@id/play"
        app:layout_constraintBottom_toBottomOf="@id/play"
        android:src="@drawable/r15"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/play"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="50dp"
        android:text="SLEEP MUSIC"
        android:fontFamily="@font/helveticaneue_medium"
        android:textColor="@color/homeDim"
        android:id="@+id/body"
        android:textSize="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/body"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:text="Night Island"
        android:fontFamily="@font/helveticaneu_bold"
        android:textColor="@color/white"
        android:id="@+id/head"
        android:textSize="34dp"/>

</android.support.constraint.ConstraintLayout>